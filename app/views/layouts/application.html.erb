<!DOCTYPE html>
<html>

<head>
  <title>StimulusReflexTodo</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= action_cable_meta_tag %>

  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
  <%= javascript_include_tag("primer_view_components") %>
</head>

<body>
  <div
    class="flex flex-col min-h-screen bg-gradient-to-br from-primary to-secondary lg:bg-tertiary lg:from-inherit lg:to-inherit">
    <div class="mockup-window border bg-base-300">
      <%= render(AppBackgroundComponent.new) %>
      <%= render(HeadLineComponent.new) %>
      <%= yield %>
      <%= render(AppFooterComponent.new) %>
    </div>
  </div>
</body>

</html>