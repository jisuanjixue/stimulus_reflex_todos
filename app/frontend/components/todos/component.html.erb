<%= component_controller do %>
<%= render(CreateTodoComponent.new) %>
<div class=" p-6 bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700 todo-list">
    <% if filter_todos.empty? %>
    <div class="flex flex-row">
        <div class="basis-1/2">
            <%= no_todos_text %>
        </div>
    </div>
    <% end %>
    <%= render(Todo::ItemComponent.with_collection(filter_todos)) %>
    <div class="flex">
        <div class="flex-none w-14 h-14">
            <p>
                <%= pluralize(active_todos.count, 'item') %>
            </p>
        </div>
        <div class="flex-grow h-14">
            <%= tags %>
        </div>
        <div class="flex-none w-14 h-14">
            <%= reflex_tag(
                    :clear,
                    :button,
                    'Clear completed',
                    class: "focus:outline-none text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-900",
                    type: "button",
                    disabled: completed_todos.empty?
                )
                %>
        </div>
    </div>
</div>
<% end %>